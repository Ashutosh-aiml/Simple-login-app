<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/baground"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">
    <EditText

        android:id="@+id/username2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="80dp"
        android:background="#66FF9800"
        android:hint="user_name"
        android:drawableStart="@drawable/ic_baseline_perm_identity_24"
        android:textSize="25sp"
        android:padding="10dp"
        />
    <EditText

        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:background="#66FF9800"
        android:hint="password"
        android:drawableStart="@drawable/ic_baseline_error_outline_24"
        android:layout_below="@+id/username2"
        android:textSize="25sp"
        android:padding="10dp"
        />
    <EditText

        android:id="@+id/password3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:background="#66FF9800"
        android:hint="confirm_password"
        android:drawableStart="@drawable/ic_baseline_error_outline_24"
        android:layout_below="@+id/password2"
        android:textSize="25sp"
        android:padding="10dp"
        />
    <EditText

        android:id="@+id/phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:background="#66FF9800"
        android:hint="phone_no"
        android:drawableStart="@drawable/ic_baseline_phone_android_24"
        android:layout_below="@+id/password3"
        android:textSize="25sp"
        android:padding="10dp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginbtn2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/phone_no"
        android:text="Login"
        android:onClick="Login"
        android:layout_margin="10dp"/>

</RelativeLayout>